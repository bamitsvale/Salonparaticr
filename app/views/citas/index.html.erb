<h1>Citas</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Fecha Cita</th>
      <th scope="col">Nombre</th>
      <th scope="col">Telefono</th>
      <th scope="col">Apellido</th>
      <th scope="col">Descripcion</th>

    </tr>
  </thead>
  <tbody>
  	<% @citas&.each do |cita| %>
    <tr>
      <th scope="row">1</th>
      <td><%= cita.fecha_cita %></td>
      <td><%= cita.nombre %></td>
      <td><%= cita.telefono %></td>
      <td><%= cita.apellido %></td>
      <td><%= cita.descripcion %></td>
      <td><%= link_to "Delete", cita_path(cita),method: :delete, data: {confirm: 'Are you sure ?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create Cita", new_cita_path, class: 'btn btn-primary' %>
